{
"manifest_version": 2,
  "name": "Passvault",
  "version": "1.0.1",
  "author": "Saicharan",
  "description": "Managing passwords using alexa skill",

  "icons": {
   
    "32": "/assets/images/shield.png"
    
  },
  "permissions": [
    "http://*/*",
		"https://*/*",
    "webRequest",
    "tabs",
      "cookies"
  ],
  "background":{
    "scripts":["background/bg.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/find.js"],
      "all_frames": true,
			"run_at": "document_start"
    }],
  "browser_action": {
    "default_icon": {
    "32": "/assets/images/shield.png"
    },
    "default_title": "Passvault",
    "default_popup": "/panel/panel.html"
  },
  "commands": {

  }

}
